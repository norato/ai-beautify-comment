{
  "manifest_version": 3,
  "name": "Gemini LinkedIn Commenter",
  "version": "2.2.0",
  "description": "Generate professional LinkedIn comments using Google's Gemini 1.5 Flash model",
  
  "permissions": [
    "contextMenus",
    "storage",
    "clipboardWrite",
    "scripting",
    "notifications",
    "alarms"
  ],
  
  "web_accessible_resources": [
    {
      "resources": ["icon.png"],
      "matches": ["https://*.linkedin.com/*"]
    }
  ],
  
  "host_permissions": [
    "https://*.linkedin.com/*",
    "https://raw.githubusercontent.com/*",
    "https://generativelanguage.googleapis.com/*"
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "content_scripts": [
    {
      "matches": ["https://*.linkedin.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "128": "icon.png"
    }
  },
  
  "icons": {
    "128": "icon.png"
  }
}